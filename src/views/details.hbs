<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{currBook.title}}</h2>
            <h3>Author: {{currBook.author}}</h3>
            <h3>Stars: {{currBook.stars}}</h3>
            <h3>Genre: {{currBook.genre}}</h3>
            <h3>Review: {{currBook.review}}
            </h3>

            {{#if username}}
                <!-- If there is no registered user, do not display buttons-->
                <div class="buttons">
                    {{#if isOwner}}
                        <!-- Only for registered user and author of the review -->
                        <a href="/catalog/{{currBook._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/catalog/{{currBook._id}}/delete" class="btn-delete">Delete</a>
                    {{else}}
                        {{#if isWished}}
                            <!-- logged in user who has already wished book-->
                            <p class="wish-pub">You already added the book to your wish list</p>
                        {{else}}
                            <!-- logged in user who has not yet wished book-->
                            <a href="/catalog/{{currBook._id}}/wished" class="btn-wish">Wish to read</a>
                        {{/if}}
                    {{/if}}
                </div>
            {{/if}}

        </article>

        <article class="details-card-image">
            <img src={{currBook.image}}>
        </article>

    </article>
</section>